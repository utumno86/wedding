<%= simple_form_for guest_path(@guest) do |f| %>
  <%= f.label :email_address %>
  <%= f.input_field :email_address %>
  <br>
  <%= f.label :first_name %>
  <%= f.input_field :first_name %>
  <br>
  <%= f.label :last_name %>
  <%= f.input_field :last_name %>
